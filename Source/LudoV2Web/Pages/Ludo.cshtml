}

@foreach (var item in Model.Pawns)
{
    @if (item.Position > 3)
    {
        <script type="text/javascript">
            var position = @item.Position;
            var pawnId = "@item.Color.ToLower()" + "@i";
            var startBase = "pawn" + @i + " " + "@item.Color.ToLower()";

            MovePawn(position, pawnId, startBase);
        </script>
    }

    @if (i < 4)
    {
        i++;
    }
    else
    {
        i = 1;
    }
}

